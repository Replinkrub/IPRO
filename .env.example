# ==============================================
# .env.example — IPRO
# Copie para .env e preencha os valores reais.
# NÃO commite o arquivo .env.
# ==============================================

# CORS: origens permitidas separadas por vírgula
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# CHUNK_ROWS
CHUNK_ROWS=<preencher>

# DB_NAME
DB_NAME=<preencher>

# DELAY_LOGISTICO_PADRAO
DELAY_LOGISTICO_PADRAO=<preencher>

# IPRO_API_KEY
IPRO_API_KEY=<preencher>

# Chave de assinatura para tokens JWT
JWT_SECRET=<generate_a_long_random_secret>

# MAX_INSERT_BATCH
MAX_INSERT_BATCH=<preencher>

# Nome do banco MongoDB
MONGO_DB=ipro

# String de conexão do MongoDB (NUNCA commitar credenciais reais)
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# MONGO_URL
MONGO_URL=<preencher>

# PRODUCTION_ENV
PRODUCTION_ENV=<preencher>

# RUPTURA_JANELA_ALERTA
RUPTURA_JANELA_ALERTA=<preencher>

# TIMEZONE
TIMEZONE=<preencher>

# Nome da aplicação
APP_NAME=ipro

# Ambiente: development|staging|production
ENVIRONMENT=development

# true/false
DEBUG=false

# Bind do servidor (FastAPI/Uvicorn)
HOST=0.0.0.0

# Porta do servidor
PORT=8000

# CRITICAL|ERROR|WARNING|INFO|DEBUG
LOG_LEVEL=INFO

# Fuso horário da aplicação
TZ=America/Recife
